# Dockerfile para Agentes Background con Claude CLI
FROM ubuntu:22.04

# Evitar prompts interactivos durante instalaciÃ³n
ENV DEBIAN_FRONTEND=noninteractive

# Instalar dependencias bÃ¡sicas
RUN apt-get update && apt-get install -y \
    curl \
    git \
    nodejs \
    npm \
    python3 \
    python3-pip \
    vim \
    nano \
    ca-certificates \
    gnupg \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Crear directorio para montar Claude CLI desde host
RUN mkdir -p /usr/local/bin

# Configurar PATH para Claude CLI (se montarÃ¡ desde host)
ENV PATH="/usr/local/bin:$PATH"

# Crear directorios de trabajo
RUN mkdir -p /workspace /logs
RUN chmod 755 /workspace /logs

# Verificar instalaciÃ³n de Claude CLI
RUN claude --version || echo "Claude CLI instalado pero requiere autenticaciÃ³n"

# Script de entrada para verificar autenticaciÃ³n
RUN echo '#!/bin/bash\n\
echo "ðŸ¤– Agente Background iniciado"\n\
echo "ðŸ“‚ Workspace: $(pwd)"\n\
echo "ðŸ” Verificando Claude CLI..."\n\
claude auth status || echo "âš ï¸  Claude CLI requiere autenticaciÃ³n (se montarÃ¡ desde host)"\n\
echo "âœ… Agente listo para ejecutar tareas"\n\
exec "$@"' > /entrypoint.sh && chmod +x /entrypoint.sh

# Punto de entrada por defecto
WORKDIR /workspace
ENTRYPOINT ["/entrypoint.sh"]

# Comando por defecto (se puede sobrescribir)
CMD ["bash"]